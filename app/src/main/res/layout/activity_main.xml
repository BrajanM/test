<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@android:color/holo_blue_light"
    tools:context="com.example.student.kawiarnia.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Witaj w restauracji XYZ"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Aby złożyć zamówienie proszę wpisać numer stolika"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@android:color/black"
        android:ellipsize="start"
        android:layout_marginTop="10mm"
        android:gravity="center_horizontal"
        android:hint="Podaj numer stolika"
        android:singleLine="true" />

    <Button
        android:id="@+id/Pobierz"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="20mm"
        android:backgroundTint="#303F9F"
        android:text="@string/Pobierz"

        android:textColor="@android:color/holo_blue_bright" />




</LinearLayout>
